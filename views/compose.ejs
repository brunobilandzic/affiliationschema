<%- include("partials/header") %>
<h1>Express Yourself</h1>
<form  action="/post" method="post">
  <div class="form-group">
    <label for="newPostTitle">Title</label>
    <input  class="form-control" type="text" name="newPostTitle" value="" required autocomplete="off">
  </div>
  <div class="form-group">
    <label for="newPost">Post</label>
    <textarea class="form-control" type="text" name="newPost" rows="10" required autocomplete="off"></textarea>
  </div>
  <div class="form-group">
    <select class="form-control col-lg-3" name="category">
      <option value="poetry">Poetry</option>
      <option value="worries">Worries</option>
      <option value="joys">Joys</option>
      <option value="politics">Politics</option>
      <option value="tv-and-music">Tv And Music</option>
      <option value="others">Others</option>
    </select>
  </div>
  <button class="btn cus-btn btn-lg btn-light" type="submit" name="submit">Post</button>
</form>
<%- include("partials/footer") %>
